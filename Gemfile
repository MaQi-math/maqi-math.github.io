source "https://rubygems.org"

# Jekyll version (compatible with Ruby 3.x)
gem "jekyll", "~> 4.2.0"

# Webrick for serving the site locally
gem "webrick", "~> 1.7"

# Explicitly include the CSV, Logger, Base64, and BigDecimal gems for Ruby 3.4+
gem 'csv'
gem 'logger'
gem 'base64'
gem 'bigdecimal'

# Jekyll plugins
group :jekyll_plugins do
  gem "jekyll-feed", "~> 0.12"
end
